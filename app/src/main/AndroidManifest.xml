<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ondrnovy.open.chat">

    <uses-permission android:name="android.permission.INTERNET"/><!-- Glide - downloading images from url -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/><!-- Glide - downloading images from url -->

    <uses-permission android:name="android.permission.READ_SMS"/> <!-- Content providers - SMS -->


    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.ondrnovy.open.chat.view.NewWordActivity">
        </activity>
        <activity
                android:name="com.ondrnovy.open.chat.view.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>